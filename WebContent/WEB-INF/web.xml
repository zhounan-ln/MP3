<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>servlet.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>messageFilter</filter-name>
    <filter-class>servlet.MessageFilter</filter-class>
    <init-param>
      <param-name>illegal</param-name>
      <param-value>狗,猪,猫,鸡,鸭,鱼,牛</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>messageFilter</filter-name>
    <url-pattern>/message.do</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>ValidateCode</servlet-name>
    <servlet-class>servlet.ValidateCode</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ValidateCode</servlet-name>
    <url-pattern>/code</url-pattern>
  </servlet-mapping>
</web-app>